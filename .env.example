NODE_ENV=development

APP_HOST=0.0.0.0
APP_PORT=3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=core_app

JWT_ACCESS_SECRET=access-secret-key
JWT_REFRESH_SECRET=refresh-secret-key
JWT_PASSWORD_RESET_SECRET=password-reset-secret-key
JWT_FORM_ACCESS_SECRET=form-access-secret-key

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Forms API (optional - for Google Forms integration)
# Quick Setup: Get credentials from https://console.cloud.google.com
# See README.md "Quick Start (Google Forms)" section

# Option 1: Provide service account JSON file path (recommended)
# GOOGLE_SERVICE_ACCOUNT_PATH=/absolute/path/to/service-account.json
GOOGLE_SERVICE_ACCOUNT_PATH=

# Option 2: Provide service account JSON as string (paste entire JSON content)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"...",...}'
GOOGLE_SERVICE_ACCOUNT_JSON=

# Option 3: Provide OAuth2 credentials
GOOGLE_FORMS_OAUTH_ACCESS_TOKEN=
GOOGLE_FORMS_OAUTH_REFRESH_TOKEN=

EMAIL_ENABLED=false
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@example.com
